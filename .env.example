# Kinde Authentication (Required)
KINDE_ISSUER_URL=https://your-subdomain.kinde.com
KINDE_CLIENT_ID=your_client_id
KINDE_CLIENT_SECRET=your_client_secret

# Kinde URLs (Optional - for frontend integration)
KINDE_DOMAIN=https://your-subdomain.kinde.com
KINDE_SITE_URL=http://localhost:3000
KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:3000
KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:3000/workspace

# Kinde Management API (Optional - if using management features)
KINDE_MANAGEMENT_CLIENT_ID=your_management_client_id
KINDE_MANAGEMENT_CLIENT_SECRET=your_management_client_secret

# Server Configuration
PORT=8080

# Redis Configuration (automatically set in docker-compose)
# REDIS_URL=redis://localhost:6379
# For production: redis://user:password@host:port

# Database (Optional - for authorization checks)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security (Optional)
# ARCJET_KEY=your_arcjet_key

# File Upload (Optional)
# UPLOADTHING_TOKEN=your_uploadthing_token
